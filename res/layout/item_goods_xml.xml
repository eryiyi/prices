<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_gray_white"
                >
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/circle_img"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="NO.1"
                  android:layout_margin="8dp"
                  android:textSize="18sp"
                  android:textColor="@color/yellow"
                  android:id="@+id/news_num"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
              android:text="@string/txt001"
              android:textColor="@color/text_color_heise_504f4f"
              android:textSize="18sp"
              android:textStyle="bold"
              android:ellipsize="end"
              android:layout_below="@+id/circle_img"
              android:id="@+id/item_title"
              android:gravity="center_horizontal|left"
              android:padding="3dp"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="RMB：352"
              android:textColor="@color/red_normal"
              android:textSize="18sp"
              android:id="@+id/money"
              android:padding="8dp"
              android:drawableRight="@drawable/hanghuo"
              android:layout_below="@+id/item_title"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="水货：022"
              android:textSize="14sp"
              android:visibility="gone"
              android:textColor="@color/red_normal"
              android:padding="8dp"
              android:layout_below="@+id/item_title"
              android:layout_toRightOf="@+id/money"
              android:layout_height="wrap_content"/>

    <ImageView android:layout_width="wrap_content"
                android:src="@drawable/anxin"
               android:id="@+id/pic"
               android:layout_alignParentRight="true"
               android:layout_below="@+id/item_title"
               android:layout_height="wrap_content"/>
    <RatingBar android:layout_width="wrap_content"
               android:layout_below="@+id/money"
               android:isIndicator="true"
               android:numStars="5"
               android:rating="4"
               android:stepSize="0.5"
               android:id="@+id/rating_bar"
               android:max="255"
               style="?android:attr/ratingBarStyleIndicator"
               android:progress="255"
               android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                  android:background="@drawable/button_shape_gray_gray"
                  android:layout_below="@+id/rating_bar"
                    android:gravity="center_vertical"
                  android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/near"
                       android:id="@+id/location_img"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_toRightOf="@+id/location_img"
                      android:textSize="16sp"
                      android:id="@+id/location_title"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="5dp"
                      android:gravity="center_vertical"
                      android:singleLine="true"
                      android:textColor="@color/text_color_heise_504f4f"
                      android:text="@string/txt002"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginTop="10dp"
                       android:id="@+id/tele_img"
                       android:layout_below="@+id/location_img"
                       android:src="@drawable/tele"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_toRightOf="@+id/tele_img"
                      android:textSize="16sp"
                      android:id="@+id/tel_title"
                      android:layout_below="@+id/location_img"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="5dp"
                      android:gravity="center_vertical"
                      android:textColor="@color/text_color_heise_504f4f"
                      android:text="023-8745 6321"
                      android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>


