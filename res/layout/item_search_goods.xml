<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="8dp"
              android:background="@drawable/zhuye_item_select"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView android:layout_width="80dp"
               android:id="@+id/item_img"
               android:src="@drawable/deng02"
               android:scaleType="centerCrop"
               android:layout_height="80dp"/>
    <TextView android:layout_width="120dp"
              android:id="@+id/item_prices"
              android:text="$12.00"
              android:textColor="@color/red_press"
              android:layout_marginLeft="8dp"
              android:padding="3dp"
              android:layout_marginTop="8dp"
              android:textSize="16sp"
              android:layout_toRightOf="@+id/item_img"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="120dp"
              android:text="sadfdfdasf"
              android:layout_marginTop="8dp"
              android:textSize="14sp"
              android:lineSpacingMultiplier="1.2"
              android:layout_marginLeft="8dp"
              android:layout_below="@+id/item_prices"
              android:layout_toRightOf="@+id/item_img"
              android:id="@+id/item_title"
              android:layout_height="wrap_content"/>

</RelativeLayout>