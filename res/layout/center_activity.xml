<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                    android:background="@drawable/left_back"
                    android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/back"
                      android:padding="8dp"
                       android:src="@drawable/back"
                       android:layout_height="wrap_content"/>

            <com.xiaogang.myapp.widget.CircleImageView
                      android:layout_width="45dp"
                       android:src="@drawable/head"
                       android:layout_marginTop="30dp"
                       android:id="@+id/head"
                       android:layout_centerHorizontal="true"
                       android:layout_height="45dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="@string/yonghuzhongxin"
                      android:layout_centerHorizontal="true"
                      android:id="@+id/name"
                      android:layout_marginTop="15dp"
                      android:layout_below="@+id/head"
                      android:textSize="18sp"
                      android:textColor="@color/yellow"
                      android:layout_height="wrap_content"/>
            </RelativeLayout>

        <com.xiaogang.myapp.util.upload.ReboundScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:id="@+id/top"
                              android:padding="8dp"
                              android:background="@color/yellow_orange"
                              android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:padding="3dp"
                                  android:gravity="center_horizontal"
                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:id="@+id/favourCount"
                                  android:textStyle="bold"
                                  android:textSize="16sp"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="@string/shoucangxiangmu"
                                  android:textStyle="bold"
                                  android:textSize="16sp"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View android:layout_width="1.0dp"
                          android:visibility="gone"
                          android:background="@color/white"
                          android:layout_height="match_parent">
                    </View>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:padding="3dp"
                                  android:visibility="gone"
                                  android:gravity="center_horizontal"
                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:text="0"
                                  android:textStyle="bold"
                                  android:textSize="16sp"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="@string/shoucangshanghu"
                                  android:textStyle="bold"
                                  android:textSize="16sp"
                                  android:textColor="@color/white"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_marginTop="25dp"
                              android:layout_below="@+id/top"
                              android:layout_height="wrap_content">
                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="horizontal"
                                      android:padding="15dp"
                                      android:id="@+id/edit_emp"
                                      android:gravity="center_vertical"
                                      android:layout_height="wrap_content">
                            <ImageView android:layout_width="wrap_content"
                                       android:src="@drawable/head"
                                       android:layout_height="wrap_content"/>
                            <TextView android:layout_width="wrap_content"
                                      android:text="@string/bianjizhanghu"
                                      android:textSize="16sp"
                                      android:layout_marginLeft="10dp"
                                      android:textColor="@color/text_color_heise_504f4f"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:orientation="horizontal"
                                      android:padding="15dp"
                                      android:id="@+id/open"
                                      android:gravity="center_vertical"
                                      android:layout_height="wrap_content">
                            <ImageView android:layout_width="wrap_content"
                                       android:src="@drawable/open"
                                       android:layout_height="wrap_content"/>
                            <TextView android:layout_width="wrap_content"
                                      android:text="@string/shenqingkaidian"
                                      android:textSize="16sp"
                                      android:layout_marginLeft="10dp"
                                      android:textColor="@color/text_color_heise_504f4f"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </com.xiaogang.myapp.util.upload.ReboundScrollView>

</LinearLayout>