<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
        >
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#e9e9e9"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
        <RelativeLayout
                android:id="@+id/foot_msg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/foot_msg_img"
                      android:gravity="center"
                      android:drawableTop="@drawable/msg_normal"
                      android:text="@string/xiaoxi"
                      android:textColor="@color/textcolortwo"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/foot_person"
                >

            <TextView android:layout_width="wrap_content"
                      android:id="@+id/foot_person_img"
                      android:gravity="center"
                      android:drawableTop="@drawable/person_normal"
                      android:text="@string/lianxiren"
                      android:textColor="@color/textcolortwo"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>