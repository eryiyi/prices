<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- head开始 -->
    <RelativeLayout
            android:id="@+id/lp_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:background="@color/yellow"
            android:gravity="center_vertical"
            >
        <ImageView
                android:id="@+id/leftbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/news_left"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="@string/xinwendetail"
                  android:layout_toRightOf="@+id/leftbutton"
                  android:textColor="@color/white"
                  android:textSize="22sp"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>
    <!-- head结束 -->
    <com.xiaogang.myapp.util.upload.ReboundScrollView android:layout_width="match_parent"
                                                      android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent"
              android:padding="8dp"
              android:textStyle="bold"
              android:textSize="16sp"
              android:id="@+id/title"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:padding="8dp"
              android:textSize="14sp"
              android:id="@+id/jianjie"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="match_parent"
               android:id="@+id/pic"
               android:scaleType="centerCrop"
               android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:id="@+id/cont"
              android:padding="6dp"
              android:textSize="14sp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/dateline"
              android:padding="8dp"
              android:textSize="14sp"
              android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.xiaogang.myapp.util.upload.ReboundScrollView>
</LinearLayout>