<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/yellow" android:startColor="@color/yellow"/>

            <corners android:radius="2.0dip"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/yellow" android:startColor="@color/yellow"/>

            <corners android:radius="2.0dip"/>
        </shape>
    </item>
    <item android:state_checkable="true">
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/yellow" android:startColor="@color/yellow"/>

            <corners android:radius="2.0dip"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270.0" android:endColor="@color/gray" android:startColor="@color/gray"/>

            <corners android:radius="2.0dip"/>
        </shape>
    </item>

</selector>